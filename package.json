{
  "name": "@architect/hydrate",
  "version": "6.0.0",
  "description": "Architect dependency hydrator and shared file manager",
  "main": "src/index.js",
  "bin": {
    "arc-hydrate": "src/cli.js"
  },
  "scripts": {
    "test": "npm run lint && npm run test:integration && npm run coverage",
    "test:nolint": "npm run test:integration && npm run coverage",
    "test:unit": "node --test 'test/unit/**/*-tests.js'",
    "test:integration": "node --test --test-concurrency=1 'test/integration/**/*-tests.js'",
    "test:integration:fast": "node --test --test-concurrency=1 'test/integration/symlink/**/*-tests.js' 'test/integration/*-tests.js'",
    "test:verify-migration": "node scripts/verify-migration.js",
    "coverage": "c8 --reporter=lcov --reporter=text node --test 'test/unit/**/*-tests.js'",
    "lint": "eslint . --fix",
    "rc": "npm version prerelease --preid RC",
    "vendor": "cd src/actions/autoinstall/python/py/ && vendoring sync && zip -r9 vendor.zip ./vendor"
  },
  "engines": {
    "node": ">=22"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/architect/hydrate.git"
  },
  "keywords": [],
  "author": "Brian LeRoux <b@brian.io>",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/architect/hydrate/issues"
  },
  "homepage": "https://github.com/architect/hydrate#readme",
  "files": [
    "src/*"
  ],
  "dependencies": {
    "@architect/inventory": "~6.0.0",
    "@architect/utils": "~6.0.0",
    "acorn-loose": "8.5.2",
    "esquery": "1.6.0"
  },
  "devDependencies": {
    "@architect/eslint-config": "~3.0.0",
    "c8": "~10.1.3",
    "eslint": "~9.36.0",
    "pnpm": "~10.17.1",
    "yarn": "~1.22.22"
  }
}
